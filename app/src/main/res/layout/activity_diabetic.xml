<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/DiabetiesMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_svgrepo_com"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/DiabetiesText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Diabeties"
        android:textSize="35dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="24dp" />

    <RelativeLayout
        android:layout_width="301dp"
        android:layout_height="416dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="122dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Graph"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            app:srcCompat="@drawable/graph_svgrepo_com" />

        <TextView
            android:id="@+id/MealTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:text="Meal time:"
            android:textSize="30dp" />

        <TextClock
            android:id="@+id/TimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="305dp"
            app:srcCompat="@drawable/meal_15_svgrepo_com" />

        <TextClock
            android:id="@+id/godzina_posilek2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="330dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="335dp"
            app:srcCompat="@drawable/meal_15_svgrepo_com" />

        <TextClock
            android:id="@+id/textClock3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="360dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="365dp"
            app:srcCompat="@drawable/meal_15_svgrepo_com" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
